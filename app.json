{
  "expo": {
    "name": "Yeşer",
    "slug": "yeser",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "src/assets/assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "src/assets/assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.arthlor.yeser"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "src/assets/assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.arthlor.yeser",
      "permissions": [
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "com.android.alarm.permission.SET_ALARM",
        "android.permission.WAKE_LOCK"
      ]
    },
    "web": {
      "favicon": "src/assets/assets/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./src/assets/assets/notification-icon.png",
          "color": "#5DB0A5",
          "defaultChannel": "yeser-reminders",
          "sounds": ["./src/assets/assets/sounds/notification_sound.wav"],
          "androidMode": "default",
          "androidCollapsedTitle": "Yeşer",
          "iosDisplayInForeground": true
        }
      ],

      [
        "@react-native-google-signin/google-signin",
        {
          "_comment": "iOS OAuth client ID from Google Cloud Console for Google Sign-In",
          "iosUrlScheme": "com.googleusercontent.apps.384355046895-d6l39k419j64r0ur9l5jp7qr0dk28o3n"
        }
      ]
    ],
    "scheme": "yeserapp",
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
